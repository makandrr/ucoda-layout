---
import ReviewCard from "./ReviewCard.astro";
const allReviews = await Astro.glob('../content/reviews/*.md')
---

<div id="reviews" class="reviews">
  <div class="container">
    <h1>Students say about us </h1>
    <ul class="reviews-list">
      {allReviews.map((review, index) => <div class={'card' + (index + 1)}><ReviewCard type={index === 0 ? 'primary' : 'secondary'} review={review} /></div>)}
    </ul>  
  </div>  
</div>

<style>
  h1 {
    text-align: center;
    color: #242323;
    font-weight: 600;
    font-size: 3.6rem;
  }
  .reviews {
    padding: 7rem 0;
  }
  .reviews-list {
    display: grid;
    grid-template-areas: "card1 card2"
                         "card1 card3";
    list-style: none;
    gap: 3rem;
    margin-top: 2rem;
  }
  .card1 {
    grid-area: card1;
  }
  .card2 {
    grid-area: card2;
  }
  .card3 {
    grid-area: card3;
  }

  @media (max-width: 65em) {
    .reviews-list {
      grid-template-areas: none;
      grid-template-columns: 1fr;
    }
    .card1, .card2, .card3 {
      grid-area: initial
    }
  }
</style>